@model ImportWeb.Models.MainViewModel

@{
    ViewBag.Title = "Index";
}
@section scripts{
    <script src="~/Scripts/App/SettingsViewModel.js"></script>
    <script src="~/Scripts/App/tabController.js"></script>
}
<div>
    @Html.Partial("_MenuTab")
    <h2>Administration</h2>

    <div class="row">
        <div class="col-lg-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.LastProcessedDate)
                    @Html.EditorFor(m => m.LastProcessedDate, new { htmlAttributes = new { @class = "form-control" } })
                    <input type="checkbox" name="changingLastProcessedDate" data-ng-model="checked" data-ng-init="true" /> Jag förstår följderna av att ändra datum! <br />
                    <button class="btn btn-info" data-ng-disabled="!checked">Spara</button>
                </div>

            }
        </div>
        @*<div class="col-md-8">
            <div style="width: 100%; height: 100px; border: 1px solid green;">

            </div>
        </div>*@
    </div>

</div>

<div ng-view></div>